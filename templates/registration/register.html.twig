{% extends 'layouts/base.html.twig' %}

{% block title 'Enregistrement' %}


{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger rounded mb-3" role="alert">{{ flashError }}</div>
    {% endfor %}

    <div class="row">
        <div class="col-md-6 mx-auto">
            <h1 class="my-5 text-center text-uppercase">Créer un compte</h1>

            {{ form_start(registrationForm) }}
            <div class="row">
                <div class="col-md-6">
                    {{ form_row(registrationForm.firstName) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(registrationForm.lastName) }}
                </div>
            </div>

                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.password) }}
                {{ form_row(registrationForm.agreeTerms) }}

                <button type="submit" class="btn btn-lg btn-block btn-primary mt-3">S'enregistrer</button>
            {{ form_end(registrationForm) }}

            <p class="mt-3 text-center">
                Vous avez déjà un compte ? <a href=" {{ path('app_login') }}">Connectez-vous !</a>
            </p>
        <div>
    </div>


{% endblock %}
