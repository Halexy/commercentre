{% extends 'layouts/base.html.twig' %}

{% block title %}Réinitialisez votre mot de passe{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-6 mx-auto">

            <h1 class ="mt-5 mb-2 text-center">Réinitialisez votre mot de passe</h1>

            {% for flashError in app.flashes('reset_password_error') %}
                <div class="alert alert-error rounded" role="alert">{{ flashError }}</div>
            {% endfor %}

            <p class="mb-5 mt-2 text-center text-muted">
                Entrez votre adresse e-mail et nous vous enverrons un 
                lien pour réinitialiser votre mot de passe.
            </p>

            {{ form_start(requestForm) }}
            {{ form_row(requestForm.email) }}

            <p class="text-right"><span class="asterisk">*</span> Champs obligatoires</p>
            <button class="btn btn-primary btn-lg btn-block">Envoyer un e-mail de réinitialisation</button>
            {{ form_end(requestForm) }}
        </div>
    </div>
{% endblock %}