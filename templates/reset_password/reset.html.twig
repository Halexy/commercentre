{% extends 'layouts/base.html.twig' %}

{% block title %}Réinitialisez votre mot de passe{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-6 mx-auto">
            <h1 class="mt-5 mb-3 text-center">Réinitialisez votre mot de passe</h1>

            {{ form_start(resetForm) }}
            {{ form_row(resetForm.plainPassword) }}
                <p class="text-right"><span class="asterisk">*</span> Champs obligatoires</p>
                <button class="btn btn-primary btn-lg btn-block" type="submit">Réinitialiser mot de passe</button>
            {{ form_end(resetForm) }}
        </div>
    </div>

{% endblock %}
