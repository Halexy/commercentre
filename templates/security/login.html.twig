{% extends 'layouts/base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<form method="post">


    <div class="row">
        <div class="col-md-6 mt-3 mx-auto text-center">
            <a href="{{ path('app_home') }}">
                <img src="{{ asset('build/images/logo_commercentre.44dd3a6b.png') }}" alt="Logo commercentre" class="w-25"/>
            </a>
            <h1 class="mt-5 mb-3 font-weight-normal text-center text-uppercase">Identifiez-vous</h1>
            <p class="mb-4 text-center text-muted">
                Vos produits attendent d'être ajoutés !
            </p>    

            {% if error %}
                <div class="alert alert-error rounded" role="alert">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            <div class="form-group mt-1">
                <label for="email">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="email" class="form-control" required autofocus>
            </div>

            <div class="form-group">
                <label for="password">Mot de passe</label>
                <input type="password" name="password" id="password" class="form-control" required>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            <div class="d-flex justify-content-between">

            <div class="form-group">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="_remember_me" value="" id="remember_me">
                    <label class="form-check-label" for="name="remember_me"">
                    Se souvenir de moi
                    </label>
                </div>
            </div>

                <a href="{{ path('app_forgot_password_request') }}">Mot de passe oublié ?</a>
            </div>

            <button class="btn btn-lg btn-block btn-primary mt-3" type="submit">
                Connexion
            </button>

            <p class="mt-5 mb-3 text-center text-muted">
                Vous n'avez pas encore de compte ? <a href="{{ path('app_register') }}">Créez-en un !</a>
            </p>
           
        </div>
    </div>

{% endblock %}
