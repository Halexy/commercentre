{% extends 'layouts/base.html.twig' %}

{% block title 'Profil' %}

{% block body %}

    <div class="row">
        <div class="col-md-6 mx-auto text-center">
            <h1 class="my-5 text-uppercase">Profil</h1>

            <img src="{{ app.user.gravatar }}" alt="Avatar de {{ app.user.fullName }}" class="shadow rounded-circle">


            <p class="lead mt-5">
                 {{ app.user.email }}
            </p>

            <h2 class="text-uppercase">
                {{ app.user.fullName }}
            </h2>

            <p class="pb-3"><small>Compte créé le {{ app.user.createdAt|date('d/m/Y') }}</small></p>
            <p>
                <a href="{{ path('app_account_edit') }}">Editer mon compte</a> | 
                {% if app.user.isMerchant == true %}
                    <a href="{{ path('app_merchant_account_edit') }}">Editer mon compte commerçant</a><br />
                {% endif %}
                <a href="{{ path('app_account_change_password') }}">Changer de mot de passe</a>
            </p>

        </div>
    </div>

{% endblock %}
