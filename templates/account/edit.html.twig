{% extends 'layouts/base.html.twig' %}

{% block title 'Editer profil' %}

{% block body %}

    <div class="row">
        <div class="col-md-6 mx-auto">
            <h1 class="my-5 text-uppercase text-center">Editer profil</h1>

            {{ form_start(form, {attr: {'novalidate': 'novalidate'} }) }}
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.firstName) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.lastName)}}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        {{ form_row(form.zipCode) }}
                    </div>
                    <div class="col-md-8">
                        {{ form_row(form.city) }}
                        <div style="display: none; color: #f55;" id="error-message"></div>
                    </div>
                </div>
                {{ form_rest(form) }}
                <p class="text-right"><span class="asterisk">*</span> Champs obligatoires</p>
                <button class="btn btn-primary btn-lg btn-block" type="submit">Editer profil</button>
            {{ form_end(form) }}

        </div>
    </div>

{% endblock %}
