{% extends 'layouts/base.html.twig' %}

{% block title 'Editer profil' %}

{% block body %}

    <div class="row">
        <div class="col-md-6 mx-auto">
            <h1 class="my-5 text-uppercase text-center">Editer profil</h1>

            {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.firstName) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.lastName) }}
                    </div>
                </div>
                {{ form_rest(form) }}
                <button class="btn btn-primary btn-lg btn-block" type="submit">Editer profil</button>
            {{ form_end(form) }}

        </div>
    </div>

{% endblock %}
