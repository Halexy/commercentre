{% extends 'layouts/base.html.twig' %}

{% block title 'Profil commerçant' %}


{% block body %}
    <div class="row">
        <div class="col-md-6 mx-auto">
            <h1 class="my-5 text-center text-uppercase">Créer son profil commerçant</h1>

            {{ form_start(formMerchant, {'attr': {'novalidate': 'novalidate'}}) }}

                {{ form_row(formMerchant.brandName) }}
                {{ form_row(formMerchant.addessLine) }}
                <div class="row">
                    <div class="col-md-4">
                        {{ form_row(formMerchant.zipCode) }}
                    </div>
                    <div class="col-md-8">
                        {{ form_row(formMerchant.city) }}
                        <div style="display: none; color: #f55;" id="error-message"></div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        {{ form_row(formMerchant.phoneNumber) }}
                    </div>
                    <div class="col-md-8">
                        {{ form_row(formMerchant.siretNumber) }}
                        <div style="display: none; color: #f55;" id="error-message"></div>
                    </div>
                </div>
                {{ form_row(formMerchant.description) }}
                {{ form_row(formMerchant.additionalInformation) }}
                {{ form_row(formMerchant.imageFile) }}
                {{ form_row(formMerchant.category) }}
                

                <button type="submit" class="btn btn-lg btn-block btn-primary mt-3">S'enregistrer</button>
            {{ form_end(formMerchant) }}            

            <p class="mt-3 text-center">
                Vous avez déjà un compte ? <a href=" {{ path('app_login') }}">Connectez-vous !</a>
            </p>
        <div>
    </div>


{% endblock %}
