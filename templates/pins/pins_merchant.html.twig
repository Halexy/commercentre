{% extends 'layouts/base.html.twig' %}

{% block title %}Retrouvez les articles de votre boutique !{% endblock %}

{% block body %}

    {% if pins|length > 0 %}
        <h1 class="mb-4 text-center text-muted ">Découvrez les produits proposés par votre commerçant</h1>

        {% for row in pins|batch(3) %}
            <div class="row mb-5">
                {% for pin in row %}
                {% if pin.user.id == userMerchantsId %}
                <div class="col-md-4">
                    <article class="product bg-white rounded shadow">
                        <div class="mw-100  rounded-top overflow-hidden">
                            <a href="{{ path('app_pins_show', {id: pin.id}) }}">
                                <img src="{{ (pin.imageName ? vich_uploader_asset(pin) : asset('build/images/no_image.9a55aa56.jpg')) | 
                                imagine_filter('squared_thumbnail_medium') }}" alt="{{ pin.title }}" class="w-100"/>
                            </a>
                        </div>
                        <div class="p-3">
                            <h2 class="h5 pt-3"><a href="{{ path('app_pins_show', {id: pin.id}) }}" 
                                class="text-muted text-decoration-none text-secondary">{{ pin.title }}</a>
                            </h2>
                            <p class="text-break">{{ pin.description|u.truncate(20, '...', false) }}</p>
                            <p class="mb-0 font-weight-bold text-danger"> {{ pin.price }}€ </p>
                            <p class="font-weight-bold"> Vendu par {{ pin.user.userMerchant.brandName }}</p>
                        </div>
                        
                    {% if pin.user.id == userId %}
                        <a href="#" onclick="event.preventDefault(); confirm('Êtes-vous sur ?') &&
                            document.getElementById('js-pin-delete-form-{{ pin.id }}').submit();" 
                            class="m-3 btn btn-danger">&times; Supprimer
                        </a>
                    {% endif %}

                        <form id="js-pin-delete-form-{{ pin.id }}" action="{{ path('app_pins_delete', {id: pin.id}) }}" method="post" style="display: none;">
                            <input type="hidden" name="csrf_token" value="{{ csrf_token('pin_deletion_' ~ pin.id) }}">
                            <input type="hidden" name="_method" value="DELETE">
                        </form>
                    </article>
                </div>
                {% endif %}
                {% endfor %}
            </div>
        {% endfor %}

    {% else %}
       <p class="h1 mt-5 text-center"> Aucun produit ajouté pour le moment, <a href="{{ path('app_pins_create') }}">ajoutez en un !</a></p> 
    {% endif %}

{% endblock %}