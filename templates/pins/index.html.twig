{% extends 'layouts/base.html.twig' %}

{% block title %}Trouvez les commerces proche de chez vous !{% endblock %}

{% block body %}

    {% if pins|length > 0 %}
        <h1 class="mb-4 text-center text-muted ">{{ pluralize(pins|length, 'Article') }}</h1>

        {% for row in pins|batch(3) %}
            <div class="row mb-5">
                {% for pin in row %}
                <div class="col-md-4">
                    <article class="product bg-white rounded shadow">
                        <div class="mw-100  rounded-top overflow-hidden">
                            <a href="{{ path('app_pins_show', {id: pin.id}) }}">
                                <img src="{{ (pin.imageName ? vich_uploader_asset(pin) : asset('images/no_image.jpg')) | 
                                imagine_filter('squared_thumbnail_medium') }}" alt="{{ pin.title }}" class="w-100"/>
                            </a>
                        </div>
                        <h2 class="h5 pl-3 pt-3"><a href="{{ path('app_pins_show', {id: pin.id}) }}" 
                            class="text-muted text-decoration-none text-secondary">{{ pin.title }}</a>
                        </h2>
                        <p class="pl-3">{{ pin.description|u.truncate(10, '...', false) }}</p>
                        <p class="pl-3 pb-3 font-weight-bold text-danger"> {{ pin.price }}€ </p>
                    </article>
                </div>
                {% endfor %}
            </div>
        {% endfor %}

    {% else %}
       <p class="h1 mt-5 text-center"> Aucun produit ajouté pour le moment, <a href="{{ path('app_pins_create') }}">ajoutez en un !</a></p> 
    {% endif %}

{% endblock %}
